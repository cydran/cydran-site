{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"sourceMap": true,
		"typeRoots" : ["./typings"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"jsx": "preserve"
	},
	"exclude": [
		"node_modules"
	]
}
